local player = game:GetService("Players").LocalPlayer
local gui = player:WaitForChild("PlayerGui")

-- ‡∏£‡∏≠ GameGui
local GameGui
repeat task.wait() GameGui = gui:FindFirstChild("GameGui", true) until GameGui

-- ‡∏´‡∏≤ ScrollingFrame
local scroll
for _, v in ipairs(GameGui:GetDescendants()) do
    if v:IsA("ScrollingFrame") then
        scroll = v
        break
    end
end

if not scroll then
    warn("Inventory ‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡πÄ‡∏õ‡∏¥‡∏î")
    return
end

-- ‡∏´‡∏≤ rafflesia ‡πÅ‡∏•‡πâ‡∏ß‡∏Å‡∏î‡∏õ‡∏∏‡πà‡∏°
for _, item in ipairs(scroll:GetChildren()) do
    if item:IsA("Frame") then
        for _, obj in ipairs(item:GetDescendants()) do
            if obj:IsA("TextLabel")
            and string.lower(obj.Text):find("rafflesia") then

                print("üéØ Found rafflesia")

                local button = item:FindFirstChildWhichIsA("GuiButton", true)
                if button then
                    clickButtonAuto(button)
                else
                    warn("‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏õ‡∏∏‡πà‡∏°‡πÉ‡∏ô frame")
                end

                return
            end
        end
    end
end
